{
  "root": true,
  "env": {
    "browser": true,
    "worker": true,
    "serviceworker": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "$": false,
    "$$": false,
    "QRCode": false
  },
  "rules": {
    "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }],
    "no-cond-assign": ["error", "except-parens"],
    "no-param-reassign": ["error", { "props": false }],
    "no-restricted-globals": 0
  },
  "extends": "airbnb-base"
}
